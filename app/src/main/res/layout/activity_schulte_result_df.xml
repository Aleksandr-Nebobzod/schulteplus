<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/loResultDialog"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_gravity="bottom"
	android:background="@drawable/ic_border_thick">
	
	
	<TextView
		android:id="@+id/txtTitle"
		android:layout_width="match_parent"
		android:layout_height="32dp"
		android:letterSpacing=".5"
		android:text="Title text"
		android:textAlignment="center"
		android:textColor="@color/design_default_color_primary"
		android:textSize="20sp"
		android:textStyle="bold"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toEndOf="@id/imageView"
		app:layout_constraintTop_toTopOf="parent" />
	
	<ImageView
		android:id="@+id/imageView"
		android:layout_width="24dp"
		android:layout_height="24dp"
		android:layout_margin="3dp"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="@id/txtTitle"
		app:layout_constraintBottom_toBottomOf="@id/txtTitle"
		app:srcCompat="@android:drawable/ic_dialog_info" />

	
	<TableLayout
		android:id="@+id/table_layout"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:padding="0dp"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/txtTitle">
		
		<TableRow
			android:id="@+id/table_row"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:background="@drawable/ic_border">
			
			<TextView
				android:id="@+id/tv_key1"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:minLines="1"
				android:padding="0dp"
				android:text="Key1 meaning:"
				android:textAlignment="textStart"
				android:textColor="@color/cardview_light_background"
				android:textSize="14sp"
				android:typeface="monospace"
				android:layout_weight="2"
				android:ellipsize="end"
				 />
			
			<TextView
				android:id="@+id/tv_value1"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:minLines="1"
				android:padding="0dp"
				android:text="vvv"
				android:textAlignment="textEnd"
				android:textColor="@color/cardview_light_background"
				android:textSize="14sp"
				android:textStyle="bold"
				android:typeface="monospace"
				android:layout_weight="1"
				android:ellipsize="start"
				/>

		</TableRow>
	</TableLayout>

	
	<SurfaceView
		android:layout_width="match_parent"
		android:layout_height="150dp"
		android:id="@+id/sv_psychometrics"
		android:visibility="gone"
		app:layout_constraintTop_toBottomOf="@+id/table_layout"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="@+id/imageView"
		/>
	
	<com.google.android.material.textfield.TextInputLayout
		android:id="@+id/til_note"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:hint="@string/lbl_note"
		app:endIconMode="clear_text"
		app:layout_constraintTop_toBottomOf="@+id/sv_psychometrics"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="@+id/imageView">
		
		<EditText
			android:id="@+id/et_note"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="16dp"
			android:minHeight="48dp"
			android:background="@drawable/border02"
			android:backgroundTint="@color/semi_white"
			android:drawablePadding="4dp"
			android:inputType="textShortMessage"
			android:padding="8dp"
			android:textColor="@color/black" />
	
	</com.google.android.material.textfield.TextInputLayout>
	
	<TableLayout
		android:id="@+id/table_psychometry"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:padding="0dp"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/til_note">
		<TableRow
			android:id="@+id/table_row_psy"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:background="@drawable/ic_border">
			<androidx.appcompat.widget.AppCompatSeekBar
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:id="@+id/sb_emotion"
				android:layout_weight="2"
				android:max="5"
				android:min="1"
				android:progress="1"
				android:layout_margin="8dp"
				android:tickMarkTint="@color/light_grey_A_blue"
				android:thumb="@drawable/ic_basics_dot"
				android:thumbTint="@color/light_grey_A_yellow"
				android:splitTrack="true"
				android:tooltipText="@string/lbl_level_of_emotion"
				/>
			<androidx.appcompat.widget.AppCompatSeekBar
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:id="@+id/sb_energy"
				android:layout_weight="1"
				android:max="3"
				android:min="1"
				android:progress="1"
				/>
		</TableRow>
	</TableLayout>
	
	<TextView
		android:id="@+id/txtMessage"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:minLines="1"
		android:padding="5dp"
		android:text="Here is some custom message"
		android:textAlignment="textEnd"
		android:textColor="@color/cardview_light_background"
		android:textSize="16sp"
		android:typeface="monospace"
		android:ellipsize="marquee"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="@+id/imageView"
		app:layout_constraintTop_toBottomOf="@+id/table_psychometry"
		 />
	
	<LinearLayout
		android:id="@+id/llButtons"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:visibility="gone"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/txtMessage"
		 >
		
		<Button
			android:id="@+id/btnOK"
			android:layout_width="wrap_content"
			android:layout_height="48dp"
			android:layout_marginHorizontal="5dp"
			android:layout_weight="3"
			android:text="@string/lbl_ok"
			android:textSize="20sp"
			android:fontFamily="sans-serif-condensed-light"
			style="@style/button3d"
			
			/>
		
		<Button
			android:id="@+id/btnCancel"
			android:layout_width="wrap_content"
			android:layout_height="48dp"
			android:layout_marginHorizontal="5dp"
			android:layout_weight="1"
			android:text="@string/lbl_no"
			android:textSize="20sp"
			android:elevation="5dp"
			android:background="@drawable/bg_button"
			/>

	
	</LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>