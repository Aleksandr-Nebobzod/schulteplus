<FrameLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".ui.sssr.SssrActivity">
<!--	android:theme="@style/ThemeOverlay.SchultePlus.FullscreenContainer"-->
<!--	android:background="@color/white"-->
<!--	android:background="?attr/fullscreenBackgroundColor"-->
<!--	&#45;&#45;This was theme with evice bg colour &#45;&#45; we better prefer white-->
	
	
	<!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->
	
	
	
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:padding="0dp">
		
		<!-- Date choosing section -->
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="48dp"
			android:gravity="fill_horizontal"
			android:orientation="horizontal"
			android:padding="0dp">
			
			<!-- Left arrow -->
			<ImageButton
				android:id="@+id/btn_arrow_left"
				android:layout_width="wrap_content"
				android:layout_height="48dp"
				android:background="@drawable/border008"
				android:contentDescription="@string/lbl_prev"
				android:src="@drawable/ic_baseline_arrow_left_24" />
			
			<!-- Dade -->
			<TextView
				android:id="@+id/tv_date"
				android:layout_width="0dp"
				android:layout_height="48dp"
				android:layout_weight="1"
				android:gravity="center"
				android:onClick="showDatePicker"
				android:padding="10dp"
				android:text="Select Date"
				android:textSize="20sp" />
			
			<!-- Right arrow -->
			<ImageButton
				android:id="@+id/btn_arrow_right"
				android:layout_width="wrap_content"
				android:layout_height="48dp"
				android:background="@drawable/border008"
				android:contentDescription="@string/lbl_next"
				android:src="@drawable/ic_baseline_arrow_right_24" />
		</LinearLayout>
		
		<!--  Pie Diagram -->
		<com.github.mikephil.charting.charts.PieChart
			android:id="@+id/pie_chart"
			android:layout_width="match_parent"
			android:layout_height="200dp"
			android:layout_marginTop="4dp"/>
		
		<ScrollView
			android:id="@+id/sv_content"
			android:tag="empty"
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_weight="1"
			android:gravity="center"
			android:padding="16dp"
			android:keepScreenOn="true"
			android:background="@drawable/border02"
			android:contentDescription="@string/str_empty">
			
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="0dp"
				android:layout_weight="1"
				android:orientation="vertical" >
				
				
				<!--job-->
				<TextView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:id="@+id/tv_job"
					android:text="@string/lbl_sssr_job"
					style="@style/AppTextStyleSec"
					/>
				<com.google.android.material.slider.Slider
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:id="@+id/sb_job"
					android:valueFrom="0"
					android:valueTo="9"
					android:contentDescription="@string/lbl_sssr_job"
					style="@style/SliderStyle"
					/>
				
				<!--sssr_physical-->
				<TextView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:id="@+id/tv_physical"
					android:text="@string/lbl_sssr_physical"
					style="@style/AppTextStyleSec"
					/>
				<com.google.android.material.slider.Slider
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:id="@+id/sb_physical"
					android:valueFrom="0"
					android:valueTo="9"
					android:contentDescription="@string/lbl_sssr_physical"
					style="@style/SliderStyle"
					/>
				
				<!--leisure"-->
				<TextView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:id="@+id/tv_leisure"
					android:text="@string/lbl_sssr_leisure"
					style="@style/AppTextStyleSec"
					/>
				<com.google.android.material.slider.Slider
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:id="@+id/sb_leisure"
					android:valueFrom="0"
					android:valueTo="9"
					android:contentDescription="@string/lbl_sssr_leisure"
					style="@style/SliderStyle"
					/>
				
				<!--family-->
				<TextView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:id="@+id/tv_family"
					android:text="@string/lbl_sssr_family"
					style="@style/AppTextStyleSec"
					/>
				<com.google.android.material.slider.Slider
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:id="@+id/sb_family"
					android:valueFrom="0"
					android:valueTo="9"
					android:contentDescription="@string/lbl_sssr_family"
					style="@style/SliderStyle"
					/>
				
				<!--friends-->
				<TextView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:id="@+id/tv_friends"
					android:text="@string/lbl_sssr_friends"
					style="@style/AppTextStyleSec"
					/>
				<com.google.android.material.slider.Slider
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:id="@+id/sb_friends"
					android:valueFrom="0"
					android:valueTo="9"
					android:contentDescription="@string/lbl_sssr_friends"
					style="@style/SliderStyle"
					/>
				
				<!--chores-->
				<TextView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:id="@+id/tv_chores"
					android:text="@string/lbl_sssr_chores"
					style="@style/AppTextStyleSec"
					/>
				<com.google.android.material.slider.Slider
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:id="@+id/sb_chores"
					android:valueFrom="0"
					android:valueTo="9"
					android:contentDescription="@string/lbl_sssr_chores"
					style="@style/SliderStyle"
					/>
				
				<!--sleep-->
				<TextView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:id="@+id/tv_sleep"
					android:text="@string/lbl_sssr_sleep"
					style="@style/AppTextStyleSec"
					/>
				<com.google.android.material.slider.Slider
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:id="@+id/sb_sleep"
					android:valueFrom="0"
					android:valueTo="9"
					android:contentDescription="@string/lbl_sssr_sleep"
					style="@style/SliderStyle"
					/>
				
				<!--sssr-->
				<TextView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:id="@+id/tv_sssr"
					android:text="@string/lbl_sssr_main"
					style="@style/AppTextStyleSec"
					/>
				<com.google.android.material.slider.Slider
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:id="@+id/sb_sssr"
					android:valueFrom="0"
					android:valueTo="9"
					android:contentDescription="@string/lbl_sssr_main"
					style="@style/SliderStyle"
					app:trackColorActive="@color/colorPrimary"
					app:thumbColor="@color/colorPrimary"
					/>
			
			</LinearLayout>
		</ScrollView>
		
		<!-- Emotion an Energy section -->
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:paddingTop="16dp"
			android:layout_marginBottom="4dp">
			
			<TableRow
				android:id="@+id/table_row_psy_note"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="@drawable/border02">
				<EditText
					android:id="@+id/et_note"
					android:layout_height="wrap_content"
					android:layout_width="0dp"
					android:layout_weight="1"
					
					android:backgroundTint="@color/semi_white"
					android:focusableInTouchMode="true"
					android:hint="@string/txt_note_hint"
					android:inputType="textMultiLine"
					android:minHeight="48dp"
					android:minLines="2"
					android:padding="1dp"
					android:scrollbarAlwaysDrawVerticalTrack="true"
					android:textColor="@color/black"
					android:textColorHint="@color/light_grey_D"
					android:textSize="16sp"
					android:typeface="monospace" />
				
				<androidx.appcompat.widget.SwitchCompat
					android:id="@+id/sw_data_provided"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:checked="false"
					android:text=""
					android:visibility="gone"/>
			</TableRow>
			<TableRow
				android:id="@+id/table_row_psy_header"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="@drawable/ic_border">
				<TextView
					android:id="@+id/tv_psy_header_1"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:lines="1"
					android:padding="0dp"
					android:text="@string/lbl_level_of_feels"
					android:textAlignment="center"
					android:textColor="@color/colorBackground"
					android:textSize="14sp"
					android:typeface="monospace"
					android:layout_weight="3"
					android:layout_margin="4dp"
					android:ellipsize="end"
					/>
				<TextView
					android:id="@+id/tv_psy_header_2"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:lines="1"
					android:padding="0dp"
					android:text="@string/lbl_level_of_energy"
					android:textAlignment="center"
					android:textColor="@color/colorBackground"
					android:textSize="14sp"
					android:typeface="monospace"
					android:layout_weight="1"
					android:layout_margin="4dp"
					android:ellipsize="end"
					/>
			</TableRow>
			<TableRow
				android:id="@+id/table_row_psy"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="@drawable/ic_border"
				android:padding="8dp">
				
				<SeekBar
					android:id="@+id/sb_emotion"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="3"
					android:max="4"
					android:progress="2"
					android:min="0"
					android:layout_margin="4dp"
					android:thumb="@drawable/ic_baseline_heart_broken_24"
					android:thumbTint="@color/light_grey_A_red"
					android:progressDrawable="@drawable/bg_seek_progress_colored"
					android:tooltipText="@string/lbl_level_of_feels"
					android:contentDescription="@string/lbl_level_of_feels" />
				
				<SeekBar
					android:id="@+id/sb_energy"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:max="2"
					android:progress="1"
					android:min="0"
					android:layout_margin="4dp"
					android:thumb="@drawable/ic_baseline_local_fire_department_24"
					android:thumbTint="@color/light_grey_A_red"
					android:progressDrawable="@drawable/bg_seek_progress_bw"
					android:tooltipText="@string/lbl_level_of_energy"
					android:contentDescription="@string/lbl_level_of_energy" />
			</TableRow>
		</LinearLayout>
		<LinearLayout
			android:id="@+id/fullscreen_content_controls"
			style="@style/Widget.Theme.SchultePlus.ButtonBar.Fullscreen"
			android:layout_width="match_parent"
			android:layout_height="64dp"
			android:layout_gravity="bottom|center_horizontal"
			android:weightSum="4"
			android:orientation="horizontal"
			>
			<!--			tools:ignore="UselessParent"-->
			
			<Button
				android:id="@+id/bt_exit"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:textSize="36sp"
				android:textStyle="bold"
				android:layout_weight="2"
				style="@style/SchultePlus.Button.TextButton.Dialog"
				android:text="@string/lbl_back" />
			<!--				style="?android:attr/buttonBarButtonStyle"-->
			
			<Button
				android:id="@+id/bt_distraction"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:textSize="36sp"
				android:textStyle="bold"
				android:layout_weight="2"
				style="@style/SchultePlus.Button.TextButton.Dialog"
				android:text="@string/lbl_distraction" />
		
		</LinearLayout>
	</LinearLayout>
	
	
	<!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->
	
</FrameLayout>

