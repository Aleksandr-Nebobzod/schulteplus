<androidx.cardview.widget.CardView
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:id="@+id/cv_ex_result"
	app:cardCornerRadius="10dp"
	style="@style/CardViewSurfaceStyle"
	android:elevation="0dp"
	app:cardBackgroundColor="@color/colorOnPrimary"
	android:layout_margin="6dp">
	
	<!-- FrameLayout for "R" in the corner -->
	<FrameLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@color/colorBackground" >
		
		<!-- Main content of the card -->
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:padding="0dp">
			
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				android:background="@drawable/bg_border_notched"
				android:gravity="center_vertical" >
				
				<!-- Icon -->
				<ImageView
					android:id="@+id/ex_type_icon"
					android:layout_weight="1"
					android:layout_width="0dp"
					android:layout_height="64dp"
					android:src="@drawable/ic_baseline_check_box_24"
					android:contentDescription="@string/lbl_exercises"
					android:layout_marginStart="8dp"
					android:layout_gravity="center"/>
				
				<LinearLayout
					android:layout_weight="2"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:orientation="vertical"
					android:layout_margin="8dp">
					
					<ImageView
						android:layout_width="36dp"
						android:layout_height="36dp"
						android:src="@drawable/ic_twotone_timer_24"
						android:contentDescription="@string/lbl_exercises"
						android:layout_marginTop="6dp"
						android:layout_gravity="center"/>
					<TextView
						android:id="@+id/ex_num_value"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_gravity="center"
						android:text="Time" />
				</LinearLayout>
				
				<LinearLayout
					android:layout_weight="1"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:orientation="vertical"
					android:layout_margin="0dp">
					
					<ImageView
						android:layout_width="36dp"
						android:layout_height="36dp"
						android:src="@drawable/ic_baseline_notifications_none_24"
						android:contentDescription="@string/lbl_exercises"
						android:layout_marginTop="6dp"
						android:layout_gravity="center"/>
					
					<TextView
						android:id="@+id/ex_events"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_gravity="center"
						android:text="Events" />
				</LinearLayout>
				
				<LinearLayout
					android:layout_weight="2"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:orientation="vertical"
					android:layout_margin="0dp">
					
					<ImageView
						android:layout_width="48dp"
						android:layout_height="48dp"
						android:src="@drawable/ic_psycoin"
						android:contentDescription="@string/lbl_exercises"
						android:layout_gravity="center"/>
					<TextView
						android:id="@+id/ex_psy_coins"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_gravity="center"
						android:layout_marginTop="-6dp"
						android:text="Coins" />
				</LinearLayout>
			
			</LinearLayout>
			
			<TextView
				android:id="@+id/ex_description"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:textAppearance="?attr/textAppearanceBody1"
				android:textColor="@color/colorPrimary"
				android:textAlignment="center"
				android:visibility="gone"
				android:text="Exercise Description"/>
		</LinearLayout>
		
		<!-- TextView with "R" in the top-right means Raing -->
		<TextView
			android:id="@+id/tv_rating"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="end|top"
			android:padding="2dp"
			android:text="@string/lbl_rating_letter"
			android:textColor="@android:color/transparent"
			android:textSize="16sp"
			android:textStyle="bold" />
<!--			android:background="@drawable/ic_border"-->
	
	</FrameLayout>
</androidx.cardview.widget.CardView>
