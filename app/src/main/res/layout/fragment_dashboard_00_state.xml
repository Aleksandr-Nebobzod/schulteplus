<androidx.core.widget.NestedScrollView
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent">
	
	<androidx.appcompat.widget.LinearLayoutCompat
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		tools:context=".ui.dashboard.DashboardFragment00State">
		
		<TextView
			android:id="@+id/tv_title_of_summary"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="@string/title_result"
			android:textAlignment="center"
			android:textStyle="bold|italic"
			android:visibility="gone" />
		
		<androidx.cardview.widget.CardView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			style="@style/CardViewSurfaceStyle"
			app:cardCornerRadius="10dp">
			
			<androidx.appcompat.widget.LinearLayoutCompat
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:orientation="vertical">
				
				<org.nebobrod.schulteplus.ui.KeyValueView
					android:id="@+id/kvv_days_together"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					app:keyText="@string/lbl_duration_days_together"
					app:valueText="0"  />
				
				<org.nebobrod.schulteplus.ui.KeyValueView
					android:id="@+id/kvv_days_trained"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					app:keyText="@string/lbl_duration_days_trained"
					app:valueText="0" />
				
				<org.nebobrod.schulteplus.ui.KeyValueView
					android:id="@+id/kvv_hours_trained"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					app:keyText="@string/lbl_duration_hours_trained"
					app:valueText="0" />
				
				<org.nebobrod.schulteplus.ui.KeyValueView
					android:id="@+id/kvv_psycoins"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					app:keyText="@string/lbl_psycoins_total"
					app:valueText="0" />
			</androidx.appcompat.widget.LinearLayoutCompat>
		</androidx.cardview.widget.CardView>
		
<!--	Calendar-->
		<androidx.cardview.widget.CardView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			style="@style/CardViewSurfaceStyle"
			app:cardCornerRadius="10dp">
			
			<org.nebobrod.schulteplus.ui.SpCalendarView
				android:id="@+id/calendar_view"
				android:layout_width="match_parent"
				android:layout_height="176dp"
				app:cv_orientation="vertical"
				app:cv_monthHeaderResource="@layout/calendar_day_layout"
				app:cv_dayViewResource="@layout/calendar_day_layout"
				app:cv_daySize="seventhWidth"
				/>
		
		</androidx.cardview.widget.CardView>
		
		<TextView
			android:id="@+id/tv_title_of_list"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="@string/lbl_exercises"
			android:textAlignment="center"
			android:textStyle="bold|italic" />
		
		<androidx.cardview.widget.CardView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			style="@style/CardViewSurfaceStyle"
			app:cardCornerRadius="10dp">
			
			<androidx.core.widget.NestedScrollView
				android:layout_width="match_parent"
				android:layout_height="wrap_content">
				
				<androidx.recyclerview.widget.RecyclerView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:id="@+id/rv_exresult"/>
			</androidx.core.widget.NestedScrollView>
			
			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:id="@+id/tv_no_data"
				android:text="@string/txt_no_data"
				android:textAlignment="center"
				android:textStyle="italic"
				android:visibility="gone" />

		</androidx.cardview.widget.CardView>
		
		<TextView
			android:layout_width="match_parent"
			android:layout_height="80dp"
			android:textAlignment="center"
			android:textStyle="bold|italic" />
	</androidx.appcompat.widget.LinearLayoutCompat>
	
</androidx.core.widget.NestedScrollView>
