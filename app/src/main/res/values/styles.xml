	<style name="GreyTheme" parent="FirebaseUI">
		<item name="colorPrimary">@color/light_grey_8</item>
		<item name="colorPrimaryVariant">@color/light_grey_4</item>
		<item name="colorAccent">@color/light_grey_A_blue</item>
